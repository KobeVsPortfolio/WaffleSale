<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

    <Button
            android:text="Back"
            android:layout_width="279dp"
            android:layout_height="40dp"
            android:id="@+id/backButton"
            android:onClick="backButton"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/baloo_regular"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp" android:layout_marginEnd="61dp"
            android:layout_marginTop="544dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:singleLine="true"
            android:id="@+id/fullNameInfo"
            android:fontFamily="@font/baloo_regular"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.095"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageInfo"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/login_button"
            app:layout_constraintVertical_bias="0.04"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="132dp"
            android:id="@+id/imageInfo"
            android:src="@drawable/avatars"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="155dp" android:layout_marginEnd="40dp"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginLeft="155dp"
            app:layout_constraintEnd_toStartOf="@+id/deleteButton" android:layout_marginRight="40dp"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorWarning"
            android:clickable="true" app:srcCompat="@drawable/garbage" tools:layout_editor_absoluteY="43dp"
            tools:layout_editor_absoluteX="295dp" android:id="@+id/deleteButton"
            android:layout_marginTop="43dp" app:layout_constraintStart_toEndOf="@+id/imageInfo"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="60dp" android:layout_marginRight="60dp"/>
</android.support.constraint.ConstraintLayout>