<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">
        tools:context=".MainActivity">

        <Button
                android:text="Order"
                android:onClick="goToOrder"
                android:layout_width="wrap_content"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="wrap_content" android:id="@+id/login_button"
                app:layout_constraintBottom_toBottomOf="@+id/button2" app:layout_constraintEnd_toStartOf="@+id/button2"
                android:layout_marginEnd="40dp" android:layout_marginRight="40dp" android:layout_marginBottom="6dp"/>

        <Button
                android:text="Add Member"
                android:onClick="goToMember"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/button2"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="208dp"
                app:layout_constraintHorizontal_bias="0.7"/>
        <Button
                android:text="Login"
                android:onClick="login"
                android:layout_width="wrap_content"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:id="@+id/button3" android:layout_marginTop="65dp"
                app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginEnd="85dp"
                android:layout_marginRight="85dp" app:layout_constraintEnd_toEndOf="@+id/button2"/>

</android.support.constraint.ConstraintLayout>