<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/login"
            android:layout_width="279dp"
            android:layout_height="40dp"
            android:id="@+id/login_button"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp" android:layout_marginEnd="61dp" android:layout_marginBottom="84dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/sign_up"
            android:layout_width="279dp"
            android:layout_height="40dp"
            android:id="@+id/signup_button"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp" android:layout_marginEnd="61dp" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/login_button"/>
    <EditText
            android:layout_width="214dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPassword"
            android:id="@+id/editText"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="94dp"
            android:layout_marginRight="94dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toEndOf="@+id/imageView4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="94dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginRight="94dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="147dp"
            android:id="@+id/imageView2"
            android:src="@drawable/avatars"
            android:layout_marginTop="84dp" android:layout_marginBottom="100dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="63dp" android:layout_marginEnd="63dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="27dp"
            android:layout_height="28dp"
            android:src="@drawable/pw"
            android:tint="@color/colorPrimaryDark"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toStartOf="@+id/editText"
            android:layout_marginBottom="55dp" app:layout_constraintBottom_toTopOf="@+id/login_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="63dp" android:layout_marginEnd="18dp" android:layout_marginLeft="63dp"
            android:layout_marginRight="18dp"/>
    <ImageView
            android:layout_width="25dp"
            android:layout_height="27dp" android:src="@drawable/user"
            android:tint="@color/colorPrimaryDark"
            android:id="@+id/imageView4"
            android:layout_marginBottom="61dp" app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside" android:layout_marginLeft="64dp"/>

</android.support.constraint.ConstraintLayout>