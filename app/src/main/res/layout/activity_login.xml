<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

    <Button
            android:text="@string/login"
            android:layout_width="279dp"
            android:layout_height="40dp"
            android:id="@+id/login_button"
            android:fontFamily="@font/baloo_regular"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp" android:layout_marginEnd="61dp" android:layout_marginBottom="84dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/sign_up"
            android:layout_width="279dp"
            android:layout_height="40dp"
            android:id="@+id/signup_button"
            android:fontFamily="@font/baloo_regular"
            android:onClick="signup"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp" android:layout_marginEnd="61dp" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/login_button"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:theme="@style/label"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/textInputLayout" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/username"
                android:gravity="center"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/baloo_regular"
                android:inputType="textVisiblePassword"
                android:drawableStart="@drawable/username"
                android:id="@+id/editText"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:theme="@style/label"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="56dp" app:layout_constraintBottom_toTopOf="@+id/login_button"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            app:layout_constraintVertical_bias="0.546" app:layout_constraintHorizontal_bias="0.474">
        <EditText
                android:layout_width="match_parent"
                android:fontFamily="@font/baloo_regular"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/pw"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:hint="@string/password"
                android:inputType="textVisiblePassword"
                android:id="@+id/et_password"/>
    </android.support.design.widget.TextInputLayout>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="147dp"
            android:id="@+id/imageView2"
            android:src="@drawable/gingerbread_big"
            android:layout_marginTop="84dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="63dp" android:layout_marginEnd="63dp"
            app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>